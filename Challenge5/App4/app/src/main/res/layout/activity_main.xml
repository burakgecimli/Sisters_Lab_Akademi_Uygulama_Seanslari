<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textViewHeader"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Aboubakardan Tirana maçı sonrası açıklamalar"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewHeader"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Son Güncelenme 8 Ağustos Salı"
                android:textColor="#4D4C4C"
                android:textSize="14sp" />

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_below="@+id/textViewDate"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/bjk" />

            <TextView
                android:id="@+id/textViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="İlk maçta zaten iyi bir sonuç almıştık ve buraya işimizi yapmaya geldik. Zemin çok kötüydü bu arada, biz profesyonel oyuncularız ve burada işimizi yaptık. Yapım gereği sakin bir insanım. Bunu sahaya da yansıtıyorum. Bazen sahada gergin anlar olabiliyor ama sonrasında gidip onlara sarılıyorum."
                android:textAlignment="center"
                android:textSize="18sp" />

            <Button
                android:textSize="18sp"
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textViewDetail"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Devamını Oku" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>


